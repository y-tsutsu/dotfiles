{
    "editor.fontFamily": "'Courier New', Inconsolata, 'Droid Sans Mono', monospace, IPAGothic, 'Droid Sans Fallback'", 
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}${appName}",
    "workbench.editor.revealIfOpen": true,
    "code-runner.executorMap": {
        "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt && rm $dir$fileNameWithoutExt",
        "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt -std=c++14 && $dir$fileNameWithoutExt && rm $dir$fileNameWithoutExt",
        "csharp": "cd $dir && dotnet run --configuration Release",
        "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt && rm $dir$fileNameWithoutExt"
    },
    "python.linting.pylintEnabled": false
}
